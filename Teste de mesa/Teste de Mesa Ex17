public class MediaLP1 {
    public static void main(String[] args) {
        // Definição das variáveis com valores de exemplo
        double P1 = 7.0; // Nota da prova 1
        double E1 = 6.5; // Nota do exame 1
        double E2 = 8.0; // Nota do exame 2
        double AP = 9.0; // Nota da atividade prática
        double X = 2.0;  // Nota extra
        double SUB = 3.0; // Nota da submissão

        // Cálculo da média de LP1
        double mediaP1 = P1 * 0.6 + ((E1 + E2) / 2) * 0.4;
        double mediaLP1 = mediaP1 * 0.5;

        // Parte adicional do cálculo
        double parteAdicional = Math.max((mediaP1 - 5.9), 0) / (mediaP1 - 5.9);
        double resultadoAdicional = parteAdicional * AP * 0.5;

        // Cálculo final da média
        double mediaFinal = mediaLP1 + resultadoAdicional + X + (SUB * 0.2);

        // Exibição do resultado
        System.out.println("A média de LP1 é: " + mediaFinal);
    }
}
