package Exercicio;

public class Exercicio6 {
	int graus;
	public Exercicio6(int graus) {
		this.graus = graus;
		}
	public int ConversaoparaCelsius() {
		int conversao = (graus - 32) * 5/9;
		return conversao;
	}

	public static void main(String[] args) {
		int conversao = 80;
		
		Exercicio6 conversao2 = new Exercicio6(conversao);
		int conversao3 = conversao2.ConversaoparaCelsius();
		
		System.out.println("a conversão para Celsius é de: "+conversao3+"°");
		

	}

}
