public class Exercicio1 {
	int idade;
	int meses;
	int dias;
	
	public Exercicio1(int idade, int meses, int dias) {
	this.idade = idade;
	this.meses = meses;
	this.dias = dias;
	}
	public int CalculoDeDias (){
	 int TotalDias = ((idade*365) + (meses*30) + dias);
	return TotalDias;	
	}
	
		
	
	public static void main(String []args){
		int idade = 22;
		int meses = 2;
		int dias = 35;
		Exercicio1 dia = new Exercicio1(idade, meses, dias);
		int totalDias = dia.CalculoDeDias();
		
		System.out.println("VocÃª viveu aproximadamente " + totalDias + " dias.");
