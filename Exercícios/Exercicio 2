public class Exercicio2 {
	int eleitores;
	int brancos;
	int nulos;

	 public Exercicio2 (int eleitores, int brancos, int nulos) {
		 this.eleitores = eleitores;
		 this.brancos = brancos;
		 this.nulos = nulos;
	 }
	 public int numvalidos() {
		 int validos = 100 - (eleitores/100*nulos/nulos)- (eleitores/100*brancos/brancos);
		 return validos;
	 }
	 public int porcbrancos() {
		 int brancoporc = eleitores/100*brancos/brancos;
		return brancoporc;
	 }
	 public int porcnulos() {
		 int nulosporc = eleitores/100*nulos/nulos;
		 return nulosporc;
	 }
	 
	 
	 
	 
	 public static void main(String []args) {
		 int eleitores = 500;
		 int brancos = 25;
		 int nulos = 25;
		 Exercicio2 porcentagemvalidos=new Exercicio2(eleitores, brancos, nulos);
		 int validos = porcentagemvalidos.numvalidos();
		 int brancoporc = porcentagemvalidos.porcbrancos();
		 int nulosporc = porcentagemvalidos.porcnulos();
		 
		 System.out.println("a porcentagem de Votos em branco é de: "+brancoporc+ "%");
		 System.out.println("a porcentagem de Votos Nulo é de: "+nulosporc+ "%");
		 System.out.println("a porcentagem de Votos Válidos é de: "+validos+ "%");
		 
	 }
	 
	
	

}
